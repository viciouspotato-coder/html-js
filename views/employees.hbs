<div class="row">
  <div class="col-md-14">
    <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th>Employee Num</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Manager ID</th>
          <th>Status</th>
          <th>Department</th>
          <th>Hired On</th>
          <th></th>
        </tr>
        {{#each result}}
        <tr>
          <td>{{employeeNum}}</td>
          <td>
            <a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a>
          </td>
          <td><a href="mailto:{{email}}">{{email}}</a></td>
          <td>
            {{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}
          </td>
          <td>
            <a href="/employees?manager={{employeeManagerNum}}"
              >{{employeeManagerNum}}</a
            >
          </td>
          <td><a href="/employees?status={{status}}">{{status}}</a></td>
          <td>
            <a href="/employees?department={{department}}">{{department}}</a>
          </td>
          <td>{{hireDate}}</td>
          <td><a href="/employee/delete/{{employeeNum}}" class = "btn btn-danger">remove</td>
        </tr>
        {{/each}}
      </table>
    </div>
    {{#unless result}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/unless}}
    <!-- <p>TODO: render a list of all employee first and last names here</p> -->
  </div>
</div>
